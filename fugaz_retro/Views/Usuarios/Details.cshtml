@model fugaz_retro.Models.Usuario

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tbl">
    <h1>Detalles del Usuario</h1>

    <div>
        <hr />
        <dl class="row">
            <div class="col-sm-6">
                <dt>Nombre del usuario</dt>
                <dd>@Html.DisplayFor(model => model.NombreUsuario)</dd>
                <dt>@Html.DisplayNameFor(model => model.Correo)</dt>
                <dd>@Html.DisplayFor(model => model.Correo)</dd>
                <dt>@Html.DisplayNameFor(model => model.Contraseña)</dt>
                <dd>*********</dd>
            </div>
            <div class="col-sm-6">
                <dt>Estado</dt>
                <dd>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="toggleSwitch" @(Model.Estado ? "checked" : "") disabled>
                        <label class="form-check-label" for="toggleSwitch"></label>
                    </div>
                </dd>
                <dt>Fecha del Registro</dt>
                <dd>@Html.DisplayFor(model => model.DateRegister)</dd>
                <dt>Documento</dt>
                <dd>@Html.DisplayFor(model => model.Document)</dd>
                <dt class="col-sm-2">
                    Teléfono
                </dt>
                <dd class="col-sm-10">
                    @Model.Cliente?.Telefono
                </dd>
            </div>
        </dl>
    </div>
    <div class="form-group">
        <a asp-action="Index" class="btn btn-sm btn-secondary">Regresar</a>
    </div>
</div>

@model fugaz_retro.Models.Proveedor

@{
    ViewData["Title"] = "Detalles Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tbl">
    <h1>Detalles del Proveedor</h1>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-3">Tipo de Proveedor</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoProveedor)</dd>

            <!-- Mostrar RUT solo si es Jurídico -->
            @if (Model.TipoProveedor == "Jurídico")
            {
                <dt class="col-sm-3">Empresa</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Empresa)</dd>

                <dt class="col-sm-3">Representante legal</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RepresentanteLegal)</dd>

                <dt class="col-sm-3">RUT</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Rut)</dd>
            }

            <!-- Mostrar Nombre Completo y Documento solo si es Natural -->
            @if (Model.TipoProveedor == "Natural")
            {
                <dt class="col-sm-3">Nombre Completo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreCompleto)</dd>

                <dt class="col-sm-3">Documento</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Documento)</dd>
            }

            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

            <dt class="col-sm-3">Dirección</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DireccionAlternativa)</dd>

            <dt class="col-sm-2">Estado</dt>
            <dd class="col-sm-10">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="toggleSwitch" @(Model.Estado ? "checked" : "") disabled>
                    <label class="form-check-label" for="toggleSwitch"></label>
                </div>
            </dd>
        </dl>
    </div>

    <div class="row mb-3">
        <div class="col">
            <a asp-action="Index" class="btn btn-secondary">Regresar</a>
        </div>
    </div>
</div>

@model fugaz_retro.Models.DetalleProducto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="tbl">
    <h1>Editar Detalle</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="IdDetalleProducto" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Talla" class="control-label"></label>
                <input asp-for="Talla" class="form-control" />
                <span asp-validation-for="Talla" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            </div>

                <br />
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-sm btn-primary" />
                    <a asp-action="Index" class="btn btn-sm btn-secondary">Regresar</a>
                </div>
            </form>
        </div>
        </<div>

        </div>

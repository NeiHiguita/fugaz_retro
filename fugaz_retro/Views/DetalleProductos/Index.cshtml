@model IEnumerable<fugaz_retro.Models.DetalleProducto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="tbl">
            <h1>Detalle de Productos</h1>

    <table class="table table-striped table-bordered" style="margin-top: 20px;" id="Table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Talla)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
          
            <th>
                Nombre Producto
            </th>

            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                @Html.DisplayFor(modelItem => item.Talla)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Producto.NombreProducto)
            </td>
                <td>
                                <a asp-action="Details" asp-route-id="@item.IdDetalleProducto"><i class="fas fa-eye " style="color: #285d86; font-size: 22px"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.IdDetalleProducto"><i class="fas fa-trash-alt" style="color: #bf0808; font-size: 22px"></i></a>
                        </td>
        </tr>
}
    </tbody>
</table>
</div>
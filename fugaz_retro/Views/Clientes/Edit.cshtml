@model fugaz_retro.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tbl">
    <h1>Editar Cliente</h1>
    <hr />

    <form id="editForm" asp-action="Edit">
        <div class="row">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdCliente" />
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label"></label>
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdUsuario" class="control-label">Usuario</label>
                    <input asp-for="IdUsuario" class="form-control" readonly />
                    <span asp-validation-for="IdUsuario" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="IdUsuario" />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-sm btn-primary" />
            <a asp-action="Index" class="btn btn-sm btn-secondary">Regresar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
}

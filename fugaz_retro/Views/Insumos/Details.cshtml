@model fugaz_retro.Models.Insumo

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="tbl">
    <h1>Detalles</h1>

    <div>
     
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
              Nombre Insumo
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreInsumo)
            </dd>
            <dt class="col-sm-2">
               Unidad Medida
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnidadMedida)
            </dd>
            <dt class="col-sm-2">
               Descripción
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt class="col-sm-2">
               Stock
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Stock)
            </dd>
            <dt class="col-sm-2">
                Precio Unitario
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrecioUnitario)
            </dd>
            <dt class="col-sm-2">
                Estado
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado)
            </dd>
            
        </dl>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </div>
</div>


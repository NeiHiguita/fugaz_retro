<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" crossorigin="anonymous" />
<link rel="stylesheet" href="~/css/site.css" />
@section Scripts {
    <script>
        function showDetailsModal(id) {
            $.ajax({
                url: '@Url.Action("Details", "Insumos")', // Asegúrate de que el nombre del controlador es correcto
                type: 'GET',
                data: { id: id },
                success: function (data) {
                    let content = `
                        <div>
                            <h5>Nombre:</h5>
                            <p>${data.nombreInsumo || 'No disponible'}</p>
                            <h5>Categoría:</h5>
                            <p>${data.idCategoriaNavigation || 'No disponible'}</p>
                            <h5>Tipo:</h5>
                            <p>${data.categoriaInsumo || 'No disponible'}</p>
                            <h5>Stock:</h5>
                            <p>${data.stock || 'No disponible'}</p>
                            <h5>Estado:</h5>
                            <p>${data.estado || 'No disponible'}</p>
                            <h5>Precio Unitario:</h5>
                            <p>${data.precioUnitario ? `$${data.precioUnitario.toFixed(2)}` : 'No disponible'}</p>
                        </div>
                    `;
                    $('#detailsModal .modal-body').html(content);
                    $('#detailsModal').modal('show');
                },
                error: function (xhr, status, error) {
                    console.error("Error loading details:", error);
                    alert("Ocurrió un error al cargar los detalles del insumo.");
                }
            });
        }
    </script>
}


@model fugaz_retro.Models.Insumo

@{
    ViewData["Title"] = "Eliminar Insumo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="tbl d-none">
    <h1>Delete</h1>

    <h3>
        ¿Estás seguro de que quieres eliminar esta Categoria de insumo?
    </h3>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NombreInsumo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreInsumo)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.UnidadMedida)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.UnidadMedida)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Descripcion)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Descripcion)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Stock)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Stock)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PrecioUnitario)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PrecioUnitario)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Estado)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Estado)</dd>
            <dt class="col-sm-2">Categoría</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.IdCategoriaNavigation.NombreCategoria)</dd>
        </dl>

        <form id="deleteForm" asp-action="Delete" method="post">
            <input type="hidden" asp-for="IdCategoria" />
            <!-- <button type="button" class="btn btn-danger" id="btnDelete">Eliminar</button> -->
            <a asp-action="Index" class="btn btn-secondary">Regresar</a>
        </form>
    </div>
</div>

<!-- Modal de Confirmación -->
<div style="margin-top:30px;" class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Confirmación de Eliminación</h5>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que quieres eliminar esta categoría de insumo?
                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            Nombre:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NombreInsumo)
                        </dd>
                        <dt class="col-sm-2">
                            Unidad Medida:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UnidadMedida)
                        </dd>
                         <dt class="col-sm-2">
                            Descripción:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>
                         <dt class="col-sm-2">
                            Stock:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Stock)
                        </dd>
                        <dt class="col-sm-2">
                            Precio Unitario:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PrecioUnitario)
                        </dd>
                        <dt class="col-sm-2">
                            Estado:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Estado)
                        </dd>


                    </dl>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnConfirmDelete">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Mostrar la ventana modal al cargar la página
            $('#confirmModal').modal('show');

            $('#btnConfirmDelete').click(function () {
                // Envía el formulario de eliminación cuando se confirma la eliminación
                $('#deleteForm').submit();
            });
        });
    </script>
}

@model IEnumerable<fugaz_retro.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<div class="tbl">
    <h1>Productos</h1>

    <div class="row mb-3">
        <div class="col">
            <a asp-action="Create" class="btn btn-success">Crear Nuevo <img src="/Images/agregar.png" height="24px" alt="Alternate Text" /></a>
        </div>
    </div>

    <table class="table table-striped table-bordered text-center" id="Table" style="margin-top: 20px;">
        <thead>
            <tr>
                <th>
                    Nombre Producto
                </th>
                <th>
                    Precio Venta
                </th>
                <th>    
                    Categoría del producto
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreProducto)
                    </td>
                    <td>
                        $@string.Format("{0:N0}", item.PrecioVenta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoriaProducto)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdProducto"><i class="fas fa-pencil-alt " style="color: green; font-size: 22px"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.IdProducto"><i class="fas fa-trash-alt" style="color: #bf0808; font-size: 22px"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

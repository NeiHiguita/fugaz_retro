@model fugaz_retro.Models.CategoriaInsumo

@{
    ViewData["Title"] = "Detalles/Categoria Insumo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="tbl">
    <h1>Detalles</h1>

    <div>
       
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
               Nombre Categoría
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreCategoria)
            </dd>
            <dt class="col-sm-2">
                Estado
            </dt>
            <dd class="col-sm-10">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="toggleSwitch" @(Model.EstadoCategoria ? "checked" : "") disabled>
                    <label class="form-check-label" for="toggleSwitch"></label>
                </div>
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-sm btn-secondary">Regresar</a>

    </div>
</div>



@model fugaz_retro.Models.CategoriaInsumo

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tbl d-none">
    <h1>Delete</h1>

    <h3>
        ¿Estás seguro de que quieres eliminar esta Categoria de insumo?
    </h3>

    <div>
        <hr />
        <dl class="row">

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NombreCategoria)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.NombreCategoria)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.EstadoCategoria)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.EstadoCategoria)</dd>
        </dl>

        <form id="deleteForm" asp-action="Delete" method="post">
            <input type="hidden" asp-for="IdCategoria" />
            <!-- <button type="button" class="btn btn-danger" id="btnDelete">Eliminar</button> -->
            <a asp-action="Index" class="btn btn-secondary">Regresar</a>
        </form>
    </div>
</div>

<!-- Modal de Confirmación -->
<div style="margin-top:30px;" class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Confirmación de Eliminación</h5>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que quieres eliminar esta categoría de insumo?
                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            Nombre:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NombreCategoria)
                        </dd>
                        <dt class="col-sm-2">
                            Estado:
                        </dt>
                        <dd class="col-sm-10">
                            <!-- Cambiar DisplayFor a un switch -->
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="toggleSwitch_confirmEstado" disabled @(Model.EstadoCategoria ? "checked" : "")>
                                <label class="form-check-label" for="toggleSwitch_confirmEstado">Activo</label>
                            </div>
                        </dd>
                       
                    </dl>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnConfirmDelete">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            // Mostrar la ventana modal al cargar la página
            $('#confirmModal').modal('show');

            $('#btnConfirmDelete').click(function () {
                // Envía el formulario de eliminación cuando se confirma la eliminación
                $('#deleteForm').submit();
            });
        });
    </script>
}
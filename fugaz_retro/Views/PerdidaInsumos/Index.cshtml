@model IEnumerable<fugaz_retro.Models.PerdidaInsumo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="tbl">
<h1>Perdida de Insumos</h1>

    <div class="row mb-3">
        <div class="col">
            <a asp-action="Create" class="btn btn-success">Crear Nuevo <img src="/Images/agregar.png" height="24px" alt="Alternate Text" /></a>
        </div>
    </div>
    <table class="table table-striped table-bordered text-center" id="Table">
        <thead class="thead-dark">
        <tr>
            <th>
                Nombre del insumo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           <td>
                @Html.DisplayFor(modelItem => item.IdInsumoNavigation.NombreInsumo)
           </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
             <style>
                   .icon-link {
                    margin: 20px;
                 }
             </style>
           
                    <td class="cntr">
                        <a asp-action="Edit" asp-route-id="@item.IdPerdidaInsumo" class=" icon-link"><i class="fas fa-pencil-alt " style="color: green; font-size: 22px"></i></a>
                        <a asp-action="Details" asp-route-id="@item.IdPerdidaInsumo" class=" icon-link"><i class="fas fa-eye " style="color: #285d86; font-size: 22px"></i></a>
                   @*      <a asp-action="Delete" asp-route-id="@item.IdPerdidaInsumo" class=" icon-link"><i class="fas fa-trash-alt" style="color: #bf0808; font-size: 22px"></i></a>
                    *@ </td>
        </tr>
}
    </tbody>
</table>
</div>
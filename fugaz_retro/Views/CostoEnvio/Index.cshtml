@model IEnumerable<fugaz_retro.Models.CostoEnvio>

@{
    ViewData["Title"] = "Precio de Envío";
}
<div class="tbl">
    <h1>Precio de Envío</h1>

    <div class="row mb-3">
        <div class="col">
            <a asp-action="Create" class="btn btn-success">Precio de Envío <img src="/Images/agregar.png" height="24px" alt="Agregar" /></a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="Table">
            <thead class="thead-light">
                <tr>
                    <th>Departamento</th>
                    <th>Ciudad</th>
                    <th>Costo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Departamento</td>
                        <td>@item.Ciudad</td>
                        <td>@item.Costo</td>
                        <td>
@*                             <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pencil-alt mx-1" style="color: green; font-size: 20px"></i></a>
 *@                            <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye" style="color: #285d86; font-size: 22px"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt" style="color: #bf0808; font-size: 22px"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


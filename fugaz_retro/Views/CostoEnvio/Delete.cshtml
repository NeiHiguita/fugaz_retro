@model fugaz_retro.Models.CostoEnvio

@{
    ViewData["Title"] = "Eliminar Costo de Envío";
}

<h1>Eliminar Costo de Envío</h1>

<h3>¿Está seguro de que desea eliminar este costo de envío?</h3>

<div>
    <h4>Costo de Envío</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Ciudad
            </dt>
            <dd class="col-sm-10">
                @Model.Ciudad
            </dd>
            <dt class="col-sm-2">
                Costo
            </dt>
            <dd class="col-sm-10">
                @Model.Costo
            </dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

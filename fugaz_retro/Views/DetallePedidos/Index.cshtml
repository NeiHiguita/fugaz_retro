@model IEnumerable<fugaz_retro.Models.DetallePedido>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tbl">
    <h1>Detalles del Pedido</h1>

@*     <div class="row mb-3">
        <div class="col">
            <a class="btn btn-success" asp-action="Create">Crear Nuevo</a>
        </div>
    </div>
 *@
    <table class="table table-striped table-bordered" id="Table">
        <thead>
            <tr>
                <th>
                    Cliente
                </th>
                <th>
                    Fecha del pedido
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPedidoNavigation.IdClienteNavigation.Usuarios.NombreUsuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPedidoNavigation.FechaPedido)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
